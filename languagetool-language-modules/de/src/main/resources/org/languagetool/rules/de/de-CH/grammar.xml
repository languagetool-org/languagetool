                <token skip="-1">=</token>
                <token>"</token>
            </antipattern>
            <antipattern>
                <token skip="-1">=</token>
                <token skip="-1">"</token>
                <token>"</token>
            </antipattern>
            <antipattern>
                <token skip="-1">=</token>
                <token>'</token>
                <token min="0">'</token>
                <token>'</token>
            </antipattern>
