    <category id="CORRESPONDENCE" name="Briefe und E-Mails">
        <rulegroup id="ANREDE_KOMMA" name="Fehlendes Komma nach der Anrede">
            <rule>
                <pattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <marker>
                        <token>Sehr</token>
                        <token regexp="yes">geehrter?</token>
                        <token regexp="yes">Frau|Herr</token>
                        <token regexp="yes">[A-ZÄÖÜ][a-zäöüßáàâêéèëíìîïòóôõûçñšž]+<exception regexp="yes">Dr|Prof|Mag|Dipl.*</exception></token>
                        <token regexp="yes">\-|\.|:|\!|;</token>
                    </marker>
                </pattern>
                <message>Nach der Anredeformel sollte ein Komma stehen.</message>
                <suggestion>\2 \3 \4 \5,</suggestion>
                <example correction="Sehr geehrter Herr Müller,"><marker>Sehr geehrter Herr Müller!</marker></example>
            </rule>
            <rule>
                <pattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <token>Sehr</token>
                    <token regexp="yes">geehrter?</token>
                    <token regexp="yes">Frau|Herr</token>
                    <token regexp="yes" min="0">Prof|Dr|Mag|Dipl.*</token>
                    <token min="0">.</token>
                    <marker>
                        <token regexp="yes" postag=".*SENT_END.*" postag_regexp="yes">[A-ZÄÖÜ][a-zäöüßáàâêéèëíìîïòóôõûçñšž]+</token>
                    </marker>
                </pattern>
                <message>Nach der Anredeformel sollte ein Komma stehen.</message>
                <suggestion>\7,</suggestion>
                <example correction="Müller,">Sehr geehrte Frau Dr. <marker>Müller</marker></example>
                <example correction="Müller,">Sehr geehrter Herr <marker>Müller</marker></example>
            </rule>
            <rule>
                <pattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <token>Sehr</token>
                    <token>geehrte</token>
                    <token>Damen</token>
                    <token>und</token>
                    <marker>
                        <token postag="SENT_END">Herren</token>
                    </marker>
                </pattern>
                <message>Nach der Anredeformel sollte ein Komma stehen.</message>
                <suggestion>Herren,</suggestion>
                <example correction="Herren,">Sehr geehrte Damen und <marker>Herren</marker></example>
            </rule>
        </rulegroup>
        <rulegroup id="ANREDE_KOMMA_2" name="Fehlendes Komma nach Begrüßungsformeln (Hallo, Guten Tag)">
            <rule>
                <antipattern>
                    <token postag="SENT_START"/>
                    <token>Hey</token>
                    <token regexp="yes">toll|cool|super</token>
                    <example>Hey super, das wusste ich noch gar nicht!</example>
                </antipattern>
                <antipattern>
                    <token postag="SENT_START"/>
                    <token>Hallo</token>
                    <token regexp="yes">nochmal|noch|da|wieder</token>
                    <token min="0" regexp="yes">mal|einmal|drau(ss|ß)en</token>
                    <example>Hallo noch mal!</example>
                </antipattern>
                <antipattern>
                    <token postag="SENT_START"/>
                    <token>Hallo</token>
                    <token>in</token>
                    <token>die</token>
                    <token min="0" />
                    <token>Runde</token>
                    <example>Hallo in die Runde!</example>
                </antipattern>
                <antipattern>
                    <token skip="3" regexp="yes">Hallo|Hi|Hey|Moin|Servus|Tschüss?
                        <exception scope="next" postag=".*INR.*|VER.*:[123]:.*" postag_regexp="yes"/>
                    </token>
                    <token>,</token>
                </antipattern>
                <antipattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <token min="0" regexp="yes">&anfauf;</token>
                    <token regexp="yes">Hallo|Hi|Hey|Moin|Servus|Tschüss?</token>
                    <token/>
                    <token>!</token>
                </antipattern>
                <antipattern>
                    <token regexp="yes">&anfauf;</token>
                    <token regexp="yes">Hallo|Hi|Hey|Moin|Servus|Tschüss?</token>
                    <token regexp="yes">&anfzu;</token>
                </antipattern>
                <pattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <token min="0" regexp="yes">&anfauf;</token>
                    <marker>
                        <token regexp="yes">Hallo|Hi|Hey|Moin|Servus|Tschüss?</token>
                    </marker>
                    <token>
                        <exception postag="PKT"/>
                        <exception regexp="yes">[A-ZÄÖÜ].*|alle(rseits)?|herr|frau|liebe(r|s)?|meine?|moin|zusammen|miteinander|und|oder|ihr|du|@.*|an|–|-|\+|\(|&amp;|there|community|people|team|all|to</exception>
                    </token>
                </pattern>
                <message>Nach der Anredeformel sollte ein Komma stehen.</message>
                <suggestion>\3,</suggestion>
                <example><marker>Hallo</marker> Tom!</example>
                <example><marker>"Moin"</marker> ist Norddeutsch.</example>
                <example correction="Hallo,">„<marker>Hallo</marker> da seid ihr ja endlich!“</example>
                <example correction="Hallo,"><marker>Hallo</marker> wie geht es euch?</example>
                <example correction="Hallo,"><marker>Hallo</marker> ich bin Kira, wo ist die Bibliothek?</example>
                <example>Moin herr Müller.</example><!-- "herr" muss großgeschrieben werden, trotzdem sollte kein Komma vorgeschlagen werden -->
                <example>Hallo an alle, habe am Montag einen Brief aus Polen abgeschickt nach Hamburg.</example>
            </rule>
            <!--<rule>
                <pattern case_sensitive="yes">
                    <token postag="SENT_START"/>
                    <token min="0" regexp="yes">&anfauf;</token>
                    <token>Guten</token>
                    <marker>
                        <token regexp="yes">Abend|Morgen|Nacht|Tag</token>
                    </marker>
                    <token>
                       <exception postag="PKT|ADV:.+" postag_regexp="yes"/>
                    </token>
                </pattern>
                <message>Nach der Anredeformel sollte ein Komma stehen: <suggestion>\4,</suggestion></message>
                <example correction="Tag,">„Guten <marker>Tag</marker> Herr Müller!“</example>
                <example correction="Morgen,">Guten <marker>Morgen</marker> liebe Sorgen!</example>
                <example>Guten Morgen allerseits!</example>
            </rule>-->
        </rulegroup>

    </category>

    <category id="TYPOGRAPHY" name="Typografie" type="typographical">
        <rulegroup id="ZAHL_FORMAT_DE_AT" name="Er wiegt ungefähr 10000 (10.000) KG.">
            <antipattern>
                <token regexp="yes">\.|,|.*Nr\.?|No\.?|HRA|HRB|.*Nummer</token>
                <token regexp="yes">(\d){5,30}</token>
            </antipattern>
            <rule><!--1-->
                <pattern>
                    <marker>
                        <token regexp="yes">(\d){5,6}</token>
                    </marker>
                    <token regexp="yes" case_sensitive="yes">KG|G|Gramm|Kilo(gramm)?|KM|Kilometer|M|CM|DM|MM|((Milli|Centi|Deci)?meter)|T(onnen)?|((K|M|G|T|P)i?)?B(it|ytes?)?|Usern?|Zeichen|Sätzen?|Sekunden|Minuten|Stunden|Nutzern?|Schritten?|(\(See\)-)?Meilen|Wörtern?|Menschen|Tagen?|[£$€]|Euro?|Dollar|USD</token>
                </pattern>
                <message>Durch Punkte als Tausender-Trennzeichen lässt sich die Lesbarkeit verbessern.</message>
                <suggestion><match no="1" regexp_match="^(.+)(\d{3})$" regexp_replace="$1.$2" /></suggestion>
                <example correction="100.000">Hier werden bestimmt <marker>100000</marker> GB an Daten gespeichert.</example>
                <example>1 € = 1,95583 DM.</example>
            </rule>
            <rule><!--2-->
                <pattern>
                    <marker>
                        <token regexp="yes">(\d){7,9}</token>
                    </marker>
                    <token regexp="yes" case_sensitive="yes">KG|G|Gramm|Kilo(gramm)?|KM|Kilometer|M|CM|DM|MM|((Milli|Centi|Deci)?meter)|T(onnen)?|((K|M|G|T|P)i?)?B(it|ytes?)?|Usern?|Zeichen|Sätzen?|Sekunden|Minuten|Stunden|Nutzern?|Schritten?|(\(See\)-)?Meilen|Wörtern?|Menschen|Tagen?|[£$€]|Euro?|Dollar|USD</token>
                </pattern>
                <message>Durch Punkte als Tausender-Trennzeichen lässt sich die Lesbarkeit verbessern.</message>
                <suggestion><match no="1" regexp_match="^(.+)(\d{3})(\d{3})$" regexp_replace="$1.$2.$3" /></suggestion>
                <example correction="1.500.000">Hier werden bestimmt <marker>1500000</marker> GB an Daten gespeichert.</example>
            </rule>
            <rule><!--3-->
                <pattern>
                    <marker>
                        <token regexp="yes">(\d){5,30}</token>
                    </marker>
                    <token regexp="yes" case_sensitive="yes">KG|G|Gramm|Kilo(gramm)?|KM|Kilometer|M|CM|DM|MM|((Milli|Centi|Deci)?meter)|T(onnen)?|((K|M|G|T|P)i?)?B(it|ytes?)?|Usern?|Zeichen|Sätzen?|Sekunden|Minuten|Stunden|Nutzern?|Schritten?|(\(See\)-)?Meilen|Wörtern?|Menschen|Tagen?|[£$€]|Euro?|Dollar|USD</token>
                </pattern>
                <message>Durch Punkte als Tausender-Trennzeichen lässt sich die Lesbarkeit verbessern.</message>
                <example correction="">Hier werden bestimmt <marker>1000000</marker> GB an Daten gespeichert.</example>
            </rule>
            <rule><!--4-->
                <pattern>
                    <marker>
                        <token regexp="yes">\d{1,3}
                            <exception>0</exception>
                        </token>
                        <token>,</token>
                        <token regexp="yes" spacebefore="no">\d\d\d</token>
                    </marker>
                    <token regexp="yes" case_sensitive="yes">User|Zeichen|Nutzer|Schritte|Wörter|Menschen|Tage|[£$€]|Euro?</token>
                </pattern>
                <message>Als Tausendertrennzeichen sollte der Punkt benutzt werden.</message>
                <suggestion>\1.\3</suggestion>
                <example correction="999.999">Die App hat ungefähr <marker>999,999</marker> Nutzer.</example>
                <example correction="20.000">Ich gehe jeden Tag <marker>20,000</marker> Schritte.</example>
                <example correction="1.100">Das ganze kostet dann etwa <marker>1,100</marker> $.</example>
                <example>250, 300, 500, oder 750 Nutzer</example>
                <example>Die Eier kosten 0,134 €/kg.</example>
            </rule>
            <rule><!--5-->
                <antipattern>
                    <!-- de-CH: "15'000.00" -->
                    <token regexp="yes">['’`]</token>
                    <token regexp="yes">\d\d\d</token>
                </antipattern>
                <pattern>
                    <marker>
                        <token regexp="yes">\d\d\d
                            <exception case_sensitive="yes" scope="previous">CHF</exception>
                        </token>
                        <token>.</token>
                        <token spacebefore="no">00</token>
                    </marker>
                </pattern>
                <message>Hier muss entweder das Trennzeichen verschoben oder durch ein Komma ersetzt werden, oder eine weitere Null angehängt werden.</message>
                <suggestion>\1,\3</suggestion>
                <suggestion><match no="1" regexp_match="(\d\d?)(\d)" regexp_replace="$1.$200"/></suggestion>
                <suggestion>\1\2<match no="3">000</match></suggestion>
                <example correction="400,00|40.000|400.000">Wir brauchen <marker>400.00</marker> neue Wohnungen jährlich zu erschwinglichen Preisen.</example>
                <example>Bei Bussen ist mit einer Gebühr von CHF 600.00 zu rechnen.</example>
            </rule>
        </rulegroup>
        <rulegroup id="TYPOGRAFISCHE_ANFUEHRUNGSZEICHEN" name="Typografische Anführungszeichen" tags="picky">
            <url>https://de.wikipedia.org/wiki/Anf%C3%BChrungszeichen</url>
            <short>Typografische Anführungszeichen</short>
            <antipattern>
                <token skip="-1">=</token>
                <token>"</token>
            </antipattern>
            <antipattern>
                <token skip="-1">=</token>
                <token skip="-1">"</token>
                <token>"</token>
            </antipattern>
            <antipattern>
                <token skip="-1">=</token>
                <token>'</token>
                <token min="0">'</token>
                <token>'</token>
            </antipattern>
            <rule><!-- [1] -->
                <pattern>
                    <marker>
                        <token spacebefore="yes">"</token>
                        <token regexp="yes" spacebefore="no">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie typografische Anführungszeichen verwenden?</message>
                <suggestion>„\2“</suggestion>
                <suggestion>»\2«</suggestion>
                <example correction="„Hallo“|»Hallo«">Dann sagte er nur <marker>"Hallo"</marker>.</example>
                <example>Plugins[] = "CorePluginsAdmin"</example>
            </rule>
            <rule><!-- [2] -->
                <pattern>
                    <token postag="SENT_START" />
                    <marker>
                        <token>"</token>
                        <token regexp="yes" spacebefore="no">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie typografische Anführungszeichen verwenden?</message>
                <suggestion>„\3“</suggestion>
                <suggestion>»\3«</suggestion>
                <example correction="„Ja“|»Ja«"><marker>"Ja"</marker> war seine Antwort.</example>
            </rule>
            <rule><!-- [3] -->
                <pattern>
                    <marker>
                        <token spacebefore="yes">"</token>
                        <token regexp="yes" spacebefore="no">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie typografische Anführungszeichen verwenden?</message>
                <suggestion>„\2“</suggestion>
                <suggestion>»\2«</suggestion>
                <example correction="„Hallo“|»Hallo«">Dann sagte er nur <marker>"Hallo"</marker>.</example>
                <example>Plugins[] = "CorePluginsAdmin"</example>
            </rule>
            <rule><!-- [4] -->
                <pattern>
                    <token postag="SENT_START" />
                    <marker>
                        <token>"</token>
                        <token regexp="yes" spacebefore="no">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token regexp="yes" spacebefore="yes">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie typografische Anführungszeichen verwenden?</message>
                <suggestion>„\3 \4“</suggestion>
                <suggestion>»\3 \4«</suggestion>
                <example correction="„Hallo du“|»Hallo du«"><marker>"Hallo du"</marker> sagte er.</example>
            </rule>
            <rule><!-- [5] -->
                <pattern>
                    <marker>
                        <token spacebefore="yes">"</token>
                        <token regexp="yes" spacebefore="no">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token regexp="yes" spacebefore="yes">
                            .*[a-zäöüß0-9].*
                            <exception postag="UNKNOWN" regexp="yes">.*[a-zäöüß]{2,30}.*</exception>
                        </token>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie typografische Anführungszeichen verwenden?</message>
                <suggestion>„\2 \3“</suggestion>
                <suggestion>»\2 \3«</suggestion>
                <example correction="„Hallo du“|»Hallo du«">Dann sagte er nur <marker>"Hallo du"</marker>.</example>
            </rule>
            <rule><!-- [6] -->
                <pattern>
                    <token postag="SENT_START"/>
                    <marker>
                        <token>"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie ein öffnendes typografisches Anführungszeichen verwenden?</message>
                <suggestion>„</suggestion>
                <suggestion>»</suggestion>
                <example correction="„|»"><marker>"</marker>Hallo", sagte er zur Begrüßung.</example>
            </rule>
            <rule><!-- [7] -->
                <pattern>
                    <marker>
                        <token spacebefore="yes">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie ein öffnendes typografisches Anführungszeichen verwenden?</message>
                <suggestion>„</suggestion>
                <suggestion>»</suggestion>
                <example correction="„|»">Dann sagte er nur <marker>"</marker>Hallo".</example>
            </rule>
            <rule><!-- [8] -->
                <antipattern>
                    <token regexp="yes">.+</token>
                    <token spacebefore="no">(</token>
                </antipattern>
                <pattern>
                    <token>(</token>
                    <marker>
                        <token spacebefore="no">"</token>
                    </marker>
                </pattern>
                <message>Möchten Sie ein öffnendes typografisches Anführungszeichen verwenden?</message>
                <suggestion>„</suggestion>
                <suggestion>»</suggestion>
                <example correction="„|»">Das ist ein Haus (<marker>"</marker>Burg").</example>
            </rule>
            <rule><!-- [9] -->
                <antipattern><!-- smilies: ":-)"-->
                    <token regexp="yes">[;:\)]</token>
                    <token spacebefore="no">
                        <exception>"</exception>
                    </token>
                </antipattern>
                <pattern>
                    <marker>
                        <token>"</token>
                    </marker>
                    <token regexp="yes">[,.;:\)].*</token>
                </pattern>
                <message>Möchten Sie ein schließendes typografisches Anführungszeichen verwenden?</message>
                <suggestion>“</suggestion>
                <suggestion>«</suggestion>
                <example correction="“|«">"Hallo<marker>"</marker>, sagte er zur Begrüßung.</example>
            </rule>
            <rule><!-- [10] -->
                <antipattern>
                    <token postag="SENT_START" />
                    <token spacebefore="no">"</token>
                </antipattern>
                <pattern>
                    <marker>
                        <token spacebefore="no">"</token>
                    </marker>
                    <token spacebefore="yes" regexp="yes">[–\-]</token>
                    <token spacebefore="yes" />
                </pattern>
                <message>Möchten Sie ein schließendes typografisches Anführungszeichen verwenden?</message>
                <suggestion>“</suggestion>
                <suggestion>«</suggestion>
                <example correction="“|«">"Hallo<marker>"</marker> - sagte er zur Begrüßung.</example>
