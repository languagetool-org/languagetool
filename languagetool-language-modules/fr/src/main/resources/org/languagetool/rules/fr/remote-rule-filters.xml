            <rule>
                <pattern>
                    <token postag="R pers suj 3.*|R pers obj 3.*" postag_regexp="yes" regexp="yes">iels?</token>
                </pattern>
                <example correction="">Mais <marker>iel</marker> a décidé de faire ça autrement.</example>
            </rule>
        </rulegroup>
