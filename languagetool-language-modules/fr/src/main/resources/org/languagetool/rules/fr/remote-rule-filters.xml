        <rulegroup id="AI_FR_GGEC_REPLACEMENT_NOUN.*" name="">
            <rule><!--1-->
                <pattern>
                    <token regexp="yes">belgicisme(s)?</token>
                </pattern>
                <example correction="">C'est un <marker>belgicisme</marker>.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_CONFUSION.*" name="">
            <rule><!--1-->
                <pattern>
                    <token regexp="yes">belgicisme(s)?</token>
                </pattern>
                <example correction="">Ce sont des <marker>belgicismes</marker>.</example>
            </rule>
            <rule><!--2-->
                <pattern>
                    <token>tokyo</token>
                </pattern>
                <example correction="">La capitale du Japon est <marker>Tokyo</marker>.</example>
            </rule>
            <rule><!--3-->
                <pattern>
                    <token postag="R pers suj 3.*|R pers obj 3.*" postag_regexp="yes" regexp="yes">iels?</token>
                </pattern>
                <example correction=""><marker>Iel</marker> ne nous reconnait plus.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_ADJECTIVE_FORM.*" name="">
            <rule><!--1-->
                <pattern>
                    <token postag="SENT_START|M nonfin" postag_regexp="yes"/>
                    <token>que</token>
                    <token postag="R pers suj 1 p|R pers suj 2 p" postag_regexp="yes"/>
                    <marker>
                        <token postag="V inf"/>
                    </marker>
                    <token postag="P"/>
                </pattern>
                <example correction="">Que vous <marker>souhaiter</marker> de plus que du bonheur, de l’amour, de la passion ?</example>
            </rule>
            <rule><!--2-->
                <pattern>
                    <token postag="SENT_START|M nonfin" postag_regexp="yes"/>
                    <token>que</token>
                    <token postag="R pers suj 1 p|R pers suj 2 p" postag_regexp="yes"/>
                    <marker>
                        <token postag="V inf"/>
                    </marker>
                    <token postag="SENT_END" regexp="yes">[.!?]</token>
                </pattern>
                <example correction="">Que vous <marker>souhaiter</marker> ?</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_ORTHOGRAPHY_LOWERCASE.*" name="">
            <rule><!--1 to avoid interfering with other rules-->
                <pattern>
                    <token postag="SENT_START"/>
                    <token case_sensitive="yes" regexp="yes">Bonjour|Bonsoir</token>
                    <token min="0" max="1">,</token>
                    <marker>
                        <token regexp="yes" case_sensitive="yes">monsieur|madame</token>
                    </marker>
                </pattern>
                <example correction="">Bonjour <marker>monsieur</marker>.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_NOUN_FORM.*" name="">
            <rule>
                <pattern>
                    <token postag="D . s?p" postag_regexp="yes"/>
                    <token postag="N . p" postag_regexp="yes">
                        <exception regexp="yes">grosses|dernières|premières|petits</exception></token>
                    <marker>
                        <token regexp="yes" inflected="yes" postag="[JN].* s" postag_regexp="yes">&couleur_invariable;
                            <exception regexp="yes">cassée?s?|briques?|tendue?s?|nuits?|perles?|plastiques?|oranges</exception></token>
                    </marker>
                </pattern>
                <example correction="">Elle avait les yeux <marker>marron</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token postag="V etre.*" postag_regexp="yes"/>
                    <token postag="A|C coor" postag_regexp="yes" min="0" max="3"/>
                    <marker>
                        <token regexp="yes">partante?s?</token>
                    </marker>
                </pattern>
                <example correction="">Tu es <marker>partant</marker> ?</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_VERB_FORM.*" name="">
            <rule>
                <pattern>
                    <token>on</token>
                    <token inflected="yes" min="0" max="1">se</token>
                    <token postag="V etre.*" postag_regexp="yes"/>
                    <token postag="A" min="0" max="3"/>
                    <token postag="J e sp" min="0" max="1">bien</token>
                    <marker>
                        <token postag="V.* ppa.* p|J . p" postag_regexp="yes">
                            <exception regexp="yes">joué(?:es|s)?|occupé(?:es|s)?|moqué(?:es|s)?|payé(?:es|s)?|plainte(?:s)?|faite(?:s)?|rendue(?:s)?</exception></token>
                    </marker>
                </pattern>
                <example correction="">On s'est bel et bien <marker>rencontrés</marker> hier.</example>
            </rule>
            <rule>
                <pattern>
                    <token postag="V etre.*" postag_regexp="yes"/>
                    <token postag="A|C coor" postag_regexp="yes" min="0" max="3"/>
                    <marker>
                        <token regexp="yes">partante?s?</token>
                    </marker>
                </pattern>
                <example correction="">Tu es <marker>partant</marker> ?</example>
            </rule>
            <rule>
                <pattern>
                    <token postag="SENT_START|M nonfin" postag_regexp="yes"/>
                    <token>que</token>
                    <token postag="R pers suj 1 p|R pers suj 2 p" postag_regexp="yes"/>
                    <marker>
                        <token postag="V inf"/>
                    </marker>
                    <token postag="SENT_END" regexp="yes">[.!?]</token>
                </pattern>
                <example correction="">Que vous <marker>souhaiter</marker> ?</example>
            </rule>
            <rule><!--"se rendre compte"-->
                <pattern>
                    <token postag="[NJZ] . p|R pers suj [13].* p|R dem.* p|R m p" postag_regexp="yes"/>
                    <token regexp="yes">ne|n'</token>
                    <token inflected="yes" regexp="yes" min="0" max="1">[mts]e|lui|leur|[nv]ous</token>
                    <token min="0" max="1" regexp="yes">y|en</token>
                    <token postag="V .*p" postag_regexp="yes" inflected="yes">être</token>
                    <token regexp="yes">pas|point|guère|plus|jamais</token>
                    <token min="0" max="4" postag="A"/>
                    <marker>
                        <token postag="V ppa m s" inflected="yes">rendre</token>
                    </marker>
                    <token>compte</token>
                </pattern>
                <example correction="">Elles ne sont pas <marker>rendu</marker> compte.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_UNNECESSARY_ORTHOGRAPHY_SPACE.*" name="">
            <rule>
                <pattern>
                    <token postag="K"/>
                    <token spacebefore="no">-</token>
                    <token postag="K"/>
                    <marker>
                        <token spacebefore="no">-</token>
                        <token postag="K"/>
                        <token spacebefore="no">-</token>
                        <token postag="K" spacebefore="no"/>
                    </marker>
                </pattern>
                <example correction="">Deux-cent<marker>-vingt-trois</marker> personnes se sont rassemblées devant la mairie.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_UNNECESSARY_PUNCTUATION_DASH.*" name="">
            <rule>
                <pattern>
                    <token postag="K"/>
                    <marker>
                        <token spacebefore="no">-</token>
                    </marker>
                    <token postag="K" spacebefore="no"/>
                </pattern>
                <example correction="">Deux<marker>-</marker>cents personnes se sont rassemblées devant la mairie.</example>
            </rule>
        </rulegroup>
        <rulegroup id="AI_FR_GGEC_REPLACEMENT_CONFUSION_OLDSPELL.*" name="">
            <rule>
                <pattern>
                    <token postag="[VNJ].*" postag_regexp="yes"/>
                </pattern>
                <example correction="">Il ne nous <marker>reconnait</marker> plus.</example>
