<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.languagetool</groupId>
    <artifactId>languagetool-parent</artifactId>
    <version>5.1</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <artifactId>language-ga</artifactId>
  <url>http://www.languagetool.org</url>
  <name>Irish module for LanguageTool</name>

  <licenses>
    <license>
      <name>GNU Lesser General Public License</name>
      <url>http://www.gnu.org/licenses/old-licenses/lgpl-2.1.txt</url>
      <distribution>repo</distribution>
      <comments>The license refers to the source code, resources may be under different licenses</comments>
    </license>
  </licenses>

  <packaging>jar</packaging>

  <developers>
    <developer>
      <name>Jim O'Regan</name>
      <roles><role>Maintainer</role></roles>
    </developer>
    <developer>
      <name>Daniel Naber</name>
      <roles><role>Maintainer</role></roles>
    </developer>
    <developer>
      <name>Marcin Mi≈Çkowski</name>
      <roles><role>Maintainer</role></roles>
    </developer>
  </developers>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
          <excludes>
            <exclude>org/languagetool/resource/ga/earraidi-ga.bs</exclude>
            <exclude>org/languagetool/resource/ga/eile-ga.bs</exclude>
            <exclude>org/languagetool/resource/ga/filter-gramadoir.pl</exclude>
          </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.languagetool</groupId>
      <artifactId>languagetool-core</artifactId>
      <version>${languagetool.version}</version>
    </dependency>
    <dependency>
      <groupId>io.github.jimregan</groupId>
      <artifactId>languagetool-ga-dicts</artifactId>
      <version>0.02</version>
    </dependency>

    <dependency>
      <!-- see http://stackoverflow.com/questions/174560/sharing-test-code-in-maven#174670 -->
      <groupId>org.languagetool</groupId>
      <artifactId>languagetool-core</artifactId>
      <version>${languagetool.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
