        <rulegroup id="VBPERS_PRN" name="Personal verb + pronoun">
            <rule id="TAIM_ME" name="táim mé">
                <pattern>
                    <marker>
                        <token inflected='yes' postag='(?:C[UMC]:)?Verb:.*:1P:Sg.*' postag_regexp="yes"></token>
                        <token>mé</token>
                    </marker>
                </pattern>
                <message>Is féidir “<match no="1"/>” nó “<match no="1" postag="(.*)(:[123]P:?(?:Sg|Pl))(.*)" postag_regexp="yes" postag_replace="$1$3"/> <match
                        no="2"/>” a úsáid</message>
                <example correction='táim'><marker>táim mé</marker> ag teacht</example>
                <example type="correct">Tá mé ag teacht</example>
                <example type="correct">Táim ag teacht</example>
            </rule>
        </rulegroup>
        <rulegroup id="NUMBERS" name="Numbers">
            <rule id="A_AON" name="a aon">
                <pattern>
                    <token>a</token>
                    <marker>
                        <token regexp="yes">aon|ochtó|ocht</token>
                    </marker>
                </pattern>
                <message>An “h<match no="2"/>” a bhí i gceist agat?</message>
                <example correction='haon'>a <marker>aon</marker></example>
            </rule>
        </rulegroup>
