<rules lang="he" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <category id="syntax" name="syntax correction suggestions">
        <rule id="BEMIDA_VE" name="incorrect conditional bemida ve-">
            <pattern>
                <token regexp='yes'>במי?דה</token>
                <token regexp='yes'>ו(.+)</token>
            </pattern>
            <message>האם התכוונת לכתוב <suggestion>אם <match no="2" regexp_match="ו(.+)" regexp_replace="$1"/></suggestion>?</message>
            <example correction="אם יועמד">
                <marker>במידה ויועמד</marker> לדין ויזוכה, זה יהיה חורבנה של מערכת החוק בישראל.
            </example>
        </rule>
    </category>

    <category id="punctuation" name="punctuation correction suggestions">
        <rule id="DOUBLE_SINGLE_QUOTE" name="confusion of double single quote">
            <antipattern>
                <marker>
                    <token>'</token>
                    <token>'</token>
                    <token>'</token>
                </marker>
            </antipattern>
            <pattern>
                <token>'</token>
                <token spacebefore="no">'</token>
            </pattern>
            <message>Did you mean <suggestion>"</suggestion>?</message>
            <example correction='"'>Sorry for my "bad quotes<marker>'</marker>.</example>
            <example>These are triple quotes '''.</example>
        </rule>
    </category>

</rules>
