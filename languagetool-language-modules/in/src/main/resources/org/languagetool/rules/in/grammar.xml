<category id="TYPOS" name="Possible Typo" type="misspelling">
	
	<rule id="bias" name="Possible typo 'bias(bisa) digunakan/...'">
		<pattern>
			<marker>
				<token regexp="yes">bias</token>
			</marker>
			<token regexp="yes">digunakan|dipakai</token>
		</pattern>
		<message>Did you mean <suggestion>bisa</suggestion>?</message>
		<url>https://id.wikipedia.org/wiki/Wikipedia:Daftar_kosakata_bahasa_Indonesia_yang_sering_salah_dieja</url>
		<example type="correct">Sumpit <marker>bisa</marker> digunakan untuk makan.</example>
		<example correction="bad" type="incorrect">Sumpit <marker>bias</marker> digunakan untuk makan.</example>
	</rule>
	
