            <example correction="ការអភិវឌ្ឍ">
                <marker>ការអភិវឌ្ឍន៍</marker>​សង្គម។
            </example>
        </rule>
		<rule id="DOUBLE_NOUNS" name="Do not double up nouns">
            <pattern>
