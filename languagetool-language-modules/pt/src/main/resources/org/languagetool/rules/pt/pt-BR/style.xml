<rules lang="pt" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/languagetool-org/languagetool/master/languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <category id="STYLE" name="Style" type="style">
        <rule id="RETO_POSSESSIVO_PT" name="Substituição de pronome reto por pronome possessivo" tone_tags="formal" tags="picky">
            <!-- IDEA shorten_it -->
            <pattern>
                <token>à</token>
                <!-- this makes no sense, the procura here is a noun... looks like a mistake -->
                <token postag='V.+' postag_regexp='yes'/>
                <token>de</token>
                <token>vocês</token>
            </pattern>
            <message>Substitua por <suggestion>à sua \2</suggestion>.</message>
            <example correction="à sua procura">Eles andaram meses <marker>à procura de vocês</marker>.</example>
            <example>Eles andaram meses <marker>à sua procura</marker>.</example>
        </rule>

        <rule id="ENTRAR_DENTRO_BR" name="Entrar" tone_tags="objective">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">entrar</token>
                <token>dentro</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="Entrar"><marker>Entrar dentro</marker> na casa.</example>
        </rule>

        <rule id="MAIORES_INFORMACOES_BR" name="Mais informações" tone_tags="objective">
            <pattern>
                <marker>
                    <token>maiores</token>
                </marker>
                <token>informações</token>
            </pattern>
            <message>O termo &quot;maior&quot; é um comparativo de tamanho. Substitua por <suggestion>mais</suggestion>.</message>
            <example correction="mais">Para <marker>maiores</marker> informações.</example>
        </rule>

        <rule id='E_QUE_VERBO_REMOVER_QUE_PT_BR' name="Simplificar: E que → e" type="style" tone_tags="objective">
            <!-- IDEA shorten_it -->
            <antipattern>
                <token>vitamina</token>
                <token>E</token>
            </antipattern>
            <antipattern>
                <token postag='SENT_START' postag_regexp='no'/>
                <token>e</token>
                <token>que</token>
                <token postag='VMIP3.+' postag_regexp='yes' skip='-1'/>
                <token postag='_PUNCT_INTERROGATION' postag_regexp='no'/>
                <example>E que é que ela me responde?</example>
                <example>E que tem você com isso?</example>
            </antipattern>
            <antipattern>
                <token skip="-1">que</token>
                <token>e</token>
                <token>que</token>
                <token postag='VMIP3.+' postag_regexp='yes'/>
                <example>É um tema que é indivisível, e que possui vantagens.</example>
            </antipattern>
            <pattern>
                <token negate_pos="yes" postag="SENT_START"/>
                <marker>
                    <token>e</token>
                    <token>que</token>
                </marker>
                <token postag='VMIP3.+' postag_regexp='yes'/>
            </pattern>
            <message>Esta expressão pode ser simplificada.</message>
            <suggestion> \2</suggestion>
            <suggestion>, \2</suggestion>
            <suggestion> \3</suggestion>
            <suggestion>, \3</suggestion>
            <example correction=" e|, e| que|, que">Um romance eterno, perfeito para adolescentes<marker> e que</marker> conta com um jovem elenco.</example>
        </rule>

        <rule id="EXPORTOU_PARA_FORA" name="Exportou " tone_tags="objective">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">exportar</token>
                <token>para</token>
                <token>fora</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="exportou">O estado <marker>exportou para fora</marker> menos calçados este ano.</example>
        </rule>

        <rule id="ENCAROU_DE_FRENTE" name="Encarou" tone_tags="objective">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">encarar</token>
                <token>de</token>
                <token>frente</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="encarou">O casal <marker>encarou de frente</marker> o problema.</example>
        </rule>

        <rule id="GELO_GELADO" name="Gelo" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token>gelo</token>
                <token>gelado</token>
            </pattern>
            <message>Para evitar o pleonasmo, use simplesmente <suggestion>gelo</suggestion>.</message>
            <example correction="gelo">Vendemos uma pedra de <marker>gelo gelado</marker>.</example>
        </rule>

        <rule id="GANHAR_Gratis" name="Ganhar" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">ganhar</token>
                <token>grátis</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="ganhar">Você vai <marker>ganhar grátis</marker> um livro.</example>
        </rule>

        <rule id="REPETIR_De_Novo" name="Repetir" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">repetir</token>
                <token>de</token>
                <token>novo</token>
            </pattern>
            <message>Em alguns casos, esta expressão é um pleonasmo. Para evitá-lo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="repetir">Você vai <marker>repetir de novo</marker> sua missão.</example>
            <example correction="repetiremos">Mais uma vez, <marker>repetiremos de novo</marker> as instruções.</example>
        </rule>

        <rule id="PLANEJAR_Antecipadamente" name="Planejar" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">planejar</token>
                <token>antecipadamente</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="planejar">Vamos <marker>planejar antecipadamente</marker> como será feito.</example>
        </rule>

        <rule id="PEQUENOS_Detalhes" name="Pequenos" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token>pequenos</token>
                <token>detalhes</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>detalhes</suggestion>.</message>
            <example correction="detalhes">Repare os <marker>pequenos detalhes</marker> do projeto.</example>
        </rule>

        <rule id="ELO_De_Ligacao" name="Elo" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token>elo</token>
                <token>de</token>
                <token>ligação</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>elo</suggestion>.</message>
            <example correction="elo">Eu e você temos um <marker>elo de ligação</marker>.</example>
        </rule>

        <rule id="ANTECIPAR_Para_Antes" name="Antecipar" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <marker>
                    <token inflected="yes">antecipar</token>
                    <token>para</token>
                    <token>antes</token>
                </marker>
                <!-- why is this here -->
                <token regexp="yes">nossa|sua|aquela</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="antecipar">Vamos <marker>antecipar para antes</marker> nossa reunião.</example>
        </rule>

        <rule id="SUBIR_para_cima" name="Subir" tone_tags="clarity">
            <!-- IDEA shorten_it -->
            <pattern>
                <token inflected="yes">subir</token>
                <token>para</token>
                <token>cima</token>
            </pattern>
            <message>Para evitar o pleonasmo, substitua por <suggestion>\1</suggestion>.</message>
            <example correction="subir">Vamos <marker>subir para cima</marker>.</example>
        </rule>

        <rule id="AVISO_BREVE" name="Aviso prévio" tone_tags="professional">
            <pattern>
                <token>aviso</token>
                <token>breve</token>
            </pattern>
            <message>Se &quot;aviso breve&quot; se refere a comunicação da rescisão do contrato de trabalho, substitua por <suggestion>aviso prévio</suggestion>.</message>
            <example correction="aviso prévio">O <marker>aviso breve</marker> é um direito.</example>
        </rule>

        <rule id='ESTIMAÇÃO_MÁXIMA_SEMELHANÇA_PT_BR' name="Erro de tradução: 'estimação máxima verossimilhança" tone_tags="academic">
            <pattern>
                <token regexp="yes">estimativas?|estimação|estimações|estimador|estimadores</token>
                <token regexp="yes">d[ae]|pela|por</token>
                <token>máxima</token>
                <marker>
                    <token>semelhança</token>
                </marker>
            </pattern>
            <message>Esta expressão não pode ser traduzida literalmente.</message>
            <suggestion>verossimilhança</suggestion>
            <example correction='verossimilhança'>A estimativa de máxima <marker>semelhança</marker> é usada em Estatística.</example>
        </rule>

        <rule id='TAMBÉM_O_VERBO_PT_BR' name="Evitar redundância de adjetivos" tone_tags="clarity">
            <pattern>
                <token postag='NC.+|AQ.+|NP.+' postag_regexp='yes'/>
                <token>que</token>
                <token postag='V.+' postag_regexp='yes'/>
                <token postag='NC.+|AQ.+' postag_regexp='yes'/>
                <token postag='_PUNCT|_TRESPONTOS' postag_regexp='yes'/>
                <marker>
                    <token postag='DD.+|PD.+' postag_regexp='yes'/>
                    <token>também</token>
                    <token><match no="2"/></token>
                    <token><match no="3"/></token>
                </marker>
            </pattern>
            <message>Evite a repetição para melhorar a clareza do seu texto.</message>
            <suggestion>\6 também \8</suggestion>
            <example correction="esta também é">Eu fiz a formação MULTIBANCO que é obrigatória; <marker>esta também é obrigatória</marker>?</example>
        </rule>

        <rule id='LHE_S_ME_TE_VOS_VERB' name="Lhe(s)/me/te/vos + Verbo" tone_tags="formal">
            <!--
            Lhe amo muito. → Amo-lhe muito.
            Te vejo amanhã na biblioteca. → Vejo-te amanhã na biblioteca.
            Te vejo por aí. → Vejo-te por aí.
            Me manda uma foto sua, por favor. → Manda-me uma foto sua, por favor.
            -->
            <pattern>
                <token postag='SENT_START'/>
                <marker>
                    <!-- This doesn't have all the pronouns described in the thingy... -->
                    <!-- TODO discuss! -->
                    <token regexp='yes'>lhes?|vos</token>
                    <token postag='VMIP[13]S0|VMM02S0' postag_regexp='yes'/>
                </marker>
            </pattern>
            <message>Substitua por <suggestion><match no='3' case_conversion='startupper'/>-<match no="2" case_conversion="alllower"/></suggestion>.</message>
            <example correction="Amo-lhes"><marker>Lhes amo</marker> muito.</example>
        </rule>

        <rule id='FAZER_DESPORTO' name="Praticar desporto" tone_tags="formal">
            <pattern>
                <marker>
                    <token inflected='yes'>fazer</token>
                </marker>
                <token min="0" regexp="yes">muito|pouco|algum|bastante|nenhum|mais|menos</token>
                <token>desporto</token>
            </pattern>
            <message>Substitua por <suggestion><match no='1' postag='V.+' postag_regexp='yes'>praticar</match></suggestion>.</message>
            <suggestion><match no='1' postag='V.+' postag_regexp='yes'>praticar</match></suggestion>
            <example correction="praticar">Vou <marker>fazer</marker> muito desporto.</example>
        </rule>

        <rule id='FAZER_ESPORTE' name="Praticar esporte" tone_tags="formal">
            <pattern>
                <marker>
                    <token inflected='yes'>fazer</token>
                </marker>
                <token min="0" regexp="yes">muito|pouco|algum|bastante|nenhum|mais|menos</token>
                <token>esporte</token>
            </pattern>
            <message>Substitua por <suggestion><match no='1' postag='V.+' postag_regexp='yes'>praticar</match></suggestion>.</message>
            <suggestion><match no='1' postag='V.+' postag_regexp='yes'>praticar</match></suggestion>
            <example correction="praticar">Vou <marker>fazer</marker> muito esporte.</example>
        </rule>

        <rulegroup id="EMAIL" name="E-mail (correio eletrônico)" tone_tags="formal">
            <rule>
                <pattern>
                    <token regexp="yes">e-books?</token>
                </pattern>
                <message>&quot;\1&quot; é um estrangeirismo. É preferível dizer <suggestion><match no="1" regexp_match="(?ui)e-book(s)?" regexp_replace="livro$1"/> <match no="1" regexp_match="(?ui)e-book(s)?" regexp_replace="eletrônico$1"/></suggestion>.</message>
                <url>https://pt.wikipedia.org/wiki/Livro_digital</url>
                <example correction="livro eletrônico">O mais forte candidato a criador do <marker>e-book</marker> é Michael Stern Hart.</example>
                <example correction="livros eletrônicos">Escritores e editores possuem uma grande variedade de formatos à disposição quando se trata de <marker>e-books</marker>, cada um com suas vantagens e desvantagens.</example>
            </rule>
            <rule>
                <pattern>
                    <token regexp="yes">e-zines?</token>
                </pattern>
                <message>&quot;\1&quot; é um estrangeirismo. É preferível dizer <suggestion><match no="1" regexp_match="(?ui)e-zine(s)?" regexp_replace="revista$1"/> <match no="1" regexp_match="(?ui)e-zine(s)?" regexp_replace="eletrônica$1"/></suggestion>.</message>
                <url>https://pt.wikipedia.org/wiki/E-zine</url>
                <example correction="Revista eletrônica"><marker>E-zine</marker> é um "fanzine eletrônica".</example>
                <example correction="Revistas eletrônicas"><marker>E-zines</marker> são "fanzines eletrônicas".</example>
            </rule>
        </rulegroup>
    </category>

    <category id='FORMAL_SPEECH_PT_BR' name="Linguagem Formal" type="register" tone_tags="formal">
        <!-- COM A GENTE connosco/conosco -->
        <rule id='COM_A_GENTE_CONNOSCO_CONOSCO_PT_BR' name="Com a gente → Conosco" tags="picky">
            <!-- IDEA shorten_it -->
            <!--      Created by Tiago Santos and localised by Marco A.G.Pinto, Portuguese rule 2021-06-03 (17-MAR-2021+)      -->
            <!--
            Tu vens com a gente? → Tu vens conosco?
            -->
            <pattern>
                <token>com</token>
                <token>a</token>
                <token>gente</token>
            </pattern>
            <message>O uso de &quot;com a gente&quot; é informal.</message>
            <suggestion>conosco</suggestion>
            <url>https://ciberduvidas.iscte-iul.pt/consultorio/perguntas/connosco-com-a-gente-e-com-nos-no-portugues-europeu/26842</url>
            <short>Linguagem informal</short>
            <example correction="conosco">Ele veio <marker>com a gente</marker> para o revéillon.</example>
        </rule>

        <rule id='FORMAL_COM_NÓS_PT_BR' name="Expressões 'com nós'">
            <!-- IDEA shorten_it -->
            <!--    Created by Tiago F. Santos, Portuguese rule, 2016-12-28      -->
            <!-- MARCOAGPINTO 2021-06-09 (17-MAR-2021+) *START* -->
            <!--
            Ele veio com nós para o revéillon. → Ele veio conosco para o revéillon.
            -->
            <antipattern>
                <token>com</token>
                <token>nós</token>
                <token postag='Z0.+|DI.+|PI.+' postag_regexp='yes'/>
                <token postag='_PUNCT'/>
            </antipattern>
            <!-- MARCOAGPINTO 2021-06-09 (17-MAR-2021+) *END* -->
            <pattern>
                <token>com</token>
                <token>nós</token>
            </pattern>
            <message>Será que quis dizer <suggestion>conosco</suggestion>?</message>
            <url>https://ciberduvidas.iscte-iul.pt/consultorio/perguntas/connosco-com-a-gente-e-com-nos-no-portugues-europeu/26842</url>
            <short>Linguagem informal</short>
            <example correction="conosco">Ele veio <marker>com nós</marker> para o revéillon.</example>
        </rule>

        <rulegroup id='DEPRECIATIVO_PT_BR' name="Termos depreciativos" type="style" tags="picky">
            <!-- IDEA inclusive -->
            <rule>
                <antipattern>
                    <token negate_pos="yes" postag="SENT_START"/>
                    <token case_sensitive="yes">Judie</token>
                    <example>é a Judie Dench</example>
                </antipattern>
                <pattern>
                    <marker>
                        <token inflected="yes">judiar
                            <exception regexp="yes">judi[oa]s?</exception>
                        </token>
                    </marker>
                    <token negate="yes" regexp="yes">d[oae]s?|del[ea]s?</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; pondere alterar para <suggestion><match no='1' postag='V.+' postag_regexp='yes'>maltratar</match></suggestion>.</message>
                <short>Termo depreciativo</short>
                <example correction="maltratando">Você está me <marker>judiando</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token inflected="yes">judiar
                        <exception regexp="yes">judi[oa]s?</exception>
                    </token>
                    <token regexp="yes">d[oa]s?</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; considere as sugestões.</message>
                <suggestion><match no='1' postag='V.+' postag_regexp='yes'>maltratar</match> <match no='2' regexp_match='d(.+)' regexp_replace='$1'/></suggestion>
                <short>Termo depreciativo</short>
                <example correction="maltratando a">Você está <marker>judiando da</marker> menina.</example>
                <example correction="maltratando o">Você está <marker>judiando do</marker> menino.</example>
                <example correction="maltratando as">Você está <marker>judiando das</marker> meninas.</example>
                <example correction="maltratando os">Você está <marker>judiando dos</marker> meninos.</example>
            </rule>
            <rule>
                <pattern>
                    <token inflected="yes">judiar
                        <exception regexp="yes">judi[oa]s?</exception>
                    </token>
                    <token>de</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; considere as sugestões.</message>
                <suggestion><match no='1' postag='V.+' postag_regexp='yes'>maltratar</match> a</suggestion>
                <short>Termo depreciativo</short>
                <example correction="maltratando a">Você está <marker>judiando de</marker> mim.</example>
            </rule>
            <rule>
                <pattern>
                    <token inflected="yes">judiar
                        <exception regexp="yes">judi[oa]s?</exception>
                    </token>
                    <token regexp="yes">deles?</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; considere as sugestões.</message>
                <suggestion><match no='2' regexp_match='dele(.)' regexp_replace='o$1'/> <match no='1' postag='V.+' postag_regexp='yes'>maltratar</match></suggestion>
                <short>Termo depreciativo</short>
                <example correction="os maltratando">Você está <marker>judiando deles</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token inflected="yes">judiar
                        <exception regexp="yes">judi[oa]s?</exception>
                    </token>
                    <token regexp="yes">delas?</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; considere as sugestões.</message>
                <suggestion><match no='2' regexp_match='dela(.)' regexp_replace='a$1'/> <match no='1' postag='V.+' postag_regexp='yes'>maltratar</match></suggestion>
                <short>Termo depreciativo</short>
                <example correction="as maltratando">Você está <marker>judiando delas</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token regexp="yes">judieira|judiaria|judiação|judiança</token>
                </pattern>
                <message>Este termo é antissemita ou de outra forma depreciativo; pondere alterar para <suggestion>maldade</suggestion>.</message>
                <suggestion>malvadeza</suggestion>
                <suggestion>sacanagem</suggestion>
                <short>Termo depreciativo</short>
                <example correction="maldade|malvadeza|sacanagem">Que <marker>judiação</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token regexp="yes">mongos|mongolões</token>
                </pattern>
                <message>Este termo é depreciativo, capacitista ou xenofóbico. Pondere substituir por <suggestion>incapacitados</suggestion></message>
                <short>Termo depreciativo</short>
                <example correction="incapacitados">São uns <marker>mongos</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token regexp="yes">mongo|mongolão</token>
                </pattern>
                <message>Este termo é depreciativo, capacitista ou xenofóbico. Pondere substituir por <suggestion>incapacitado</suggestion></message>
                <short>Termo depreciativo</short>
                <example correction="incapacitado">Ele é um <marker>mongo</marker>.</example>
            </rule>
            <rule>
                <pattern>
                    <token regexp="yes">mongas|mongolonas</token>
                </pattern>
