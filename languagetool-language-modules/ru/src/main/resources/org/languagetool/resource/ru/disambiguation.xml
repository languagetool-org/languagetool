<!--  fast fix! -->
    <rule name="NN_Inanim_Neut" id="NN_Inanim_Neut">
        <pattern>
            <marker>
                <and>
                    <token postag="NN:Inanim:Neut" ></token>
                    <token postag="NN:Inanim:Neut:Sin:V" ></token>
