        <disambig action="add"><wd lemma="она" pos="PNN:Fem:V:P3">нее</wd></disambig>
    </rule>
    <rule name="PNN_on" id="PNN_on">
        <pattern>
            <marker>
                <token>он</token>
            </marker>
        </pattern>
        <disambig action="remove"><wd lemma="он" pos="PNN:Sin:Nom:P3">он</wd></disambig>
    </rule>
    <rule name="PNN_ona" id="PNN_ona">
        <pattern>
            <marker>
