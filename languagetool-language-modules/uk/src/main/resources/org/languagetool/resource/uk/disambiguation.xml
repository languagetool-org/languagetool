    <pattern case_sensitive="yes">
      <and>
        <token regexp="yes" postag_regexp="yes" postag="(noun|adj).*">[А-ЯІЇЄҐ][а-яіїєґ'-]+
          <exception scope="previous" postag="SENT_START"/>
