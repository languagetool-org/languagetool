<!-- documentation can be found at http://maven.apache.org/plugins/maven-assembly-plugin/assembly.html -->
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>COPYING.txt</include>
                <include>README.txt</include>
                <include>help/**</include>
                <include>images/**</include>
                <include>META-INF/**</include>
                <include>description.xml</include>
                <include>description/**</include>
                <include>Addons.xcu</include>
                <include>Accelerators.xcu</include>
                <include>Linguistic.xcu</include>
                <include>WriterWindowState.xcu</include>
                <include>SpellAndGrammarCheckDialog.xdl</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/third-party-licenses</directory>
            <outputDirectory>third-party-licenses</outputDirectory>
        </fileSet>
    </fileSets>
    <containerDescriptorHandlers>
        <!-- both of these handlers are needed so all language-module.properties get merged into one file: -->
        <containerDescriptorHandler>
            <handlerName>metaInf-services</handlerName>
        </containerDescriptorHandler>
        <containerDescriptorHandler>
            <handlerName>file-aggregator</handlerName>
            <configuration>
                <filePattern>META-INF/org/languagetool/language-module.properties</filePattern>
                <outputPath>META-INF/org/languagetool/language-module.properties</outputPath>
            </configuration>
        </containerDescriptorHandler>
    </containerDescriptorHandlers>
    <dependencySets>
        <dependencySet>
            <outputDirectory></outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.languagetool:language-*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                     <!-- we don't offer spell checking in LibreOffice/OpenOffice -->
                    <exclude>**/hunspell/*dic*</exclude>
                    <exclude>**/hunspell/*header</exclude>
                    <exclude>**/hunspell/*info</exclude>
                    <exclude>**/hunspell/*aff</exclude>
                    <exclude>**/hunspell/*sh</exclude>
                    <exclude>**/hunspell/*README*</exclude>
                    <exclude>**/spelling/**</exclude>
                </excludes>
            </unpackOptions>
            <scope>runtime</scope>
            <includes>
                <include>org.languagetool:language-*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
