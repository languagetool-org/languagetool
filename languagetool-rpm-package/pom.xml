					<execution>
						<id>prepare-lt-conf-sample</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<file>${project.basedir}/src/main/resources/templates/lt.conf.sample.template</file>
							<outputFile>${project.build.directory}/lt.conf.sample</outputFile>
							<regex>false</regex>
