    <rulegroup id="ALS_ZIJNDE" name="Als zijnde">
      <rule>
        <pattern>
          <token>als</token>
          <token></token>
          <token>zijnde</token>
        </pattern >
        <message>Bedoelt u <suggestion>'als \2'</suggestion> of <suggestion>'\2 zijnde'</suggestion>?</message>
        <example type="incorrect"><marker>Als voetballer zijnde</marker> moest hij wel doorzetten.</example>
        <example type="correct"><marker>Als voetballer</marker> moest hij wel doorzetten.</example>
      </rule>
    </rulegroup>
