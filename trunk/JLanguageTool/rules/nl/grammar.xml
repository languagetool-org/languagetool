    <rulegroup id="GROF" name="Grof taalgebruik">
      <rule>
        <pattern>
          <token regexp="yes">.*(lul|kut|kloot|klote|druiloor|zakkenwasser|shit).*</token>
        </pattern>
        <message>Dit taalgebruik kan als grof of beledigend worden ervaren.</message>
        <example type="incorrect">Ik vind hem een <marker>klootzak</marker>.</example>
        <example type="correct">Ik heb een hekel aan hem.</example>
      </rule>
    </rulegroup>
    <rulegroup id="ARCHAISCH" name="Archaisch">
      <rule>
        <pattern>
          <token regexp="yes">zulks|voorts|derhalve|desalniettemin|evenwel|mede|dewelke|nimmer|immer</token>
        </pattern>
        <message>Dit woord is ouderwets.</message>
        <example type="incorrect">Ik zie hem <marker>nimmer</marker>.</example>
        <example type="correct">Ik zie haar nooit.</example>
      </rule>
      <rule>
        <pattern>
          <token>terzake</token>
        </pattern>
        <message>Bedoelt u <suggestion>ter zake?</suggestion> Het is bovendien wat ouderwets.</message>
        <example type="incorrect">Kom eens <marker>terzake</marker>.</example>
        <example type="correct">Kom eens ter zake.</example>
      </rule>
    </rulegroup>
