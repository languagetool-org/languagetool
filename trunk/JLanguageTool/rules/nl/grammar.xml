<rules lang="nl">
  <category name="Mogelijke typefouten">
    <rulegroup id="LIDWOORD_LIDWOORD" name="Dubbel Lidwoord">
      <rule>
        <pattern>
          <token regexp="yes">de</token>
          <token regexp="yes">het</token>
        </pattern>
        <message>Dubbel lidwoord</message>
        <example type="correct"><marker>De</marker> boot is zelfgemaakt.</example>
        <example type="incorrect"><marker>De het</marker> boot is zelfgemaakt.</example>
      </rule>
    </rulegroup>
    <rulegroup id="ZO-EVEN" name="Zo-even">
      <rule>
        <pattern>
          <token>zoeven</token>
        </pattern>
        <message>Bedoelt u <suggestion>zo-even</suggestion>?</message>
        <example type="correct">Dit is <marker>zo-even</marker> ingetikt.</example>
        <example type="incorrect">Dit is <marker>zoeven</marker> ingetikt.</example>
      </rule>
    </rulegroup>
